extend base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Reset Password
      form.form.form--resetpassword
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password.form__input(name ="password" type='password', placeholder='••••••••', required, minlength='8')
        .form__group.ma-bt-md
          label.form__label(for='passwordConfirm') Confirm Password
          input#passwordConfirm.form__input(name ="passwordConfirm" type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green reset password